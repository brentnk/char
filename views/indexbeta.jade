doctype html
html(ng-app='myApp')
  head
    title unquote
    meta(charset='utf8', name='viewport', content='width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes')
    script(src='bower_components/webcomponentsjs/webcomponents.js')
    link(rel='import', href='bower_components/core-toolbar/core-toolbar.html')
    link(rel='import', href='bower_components/paper-input/paper-input.html')
    link(rel='import', href='bower_components/paper-item/paper-item.html')
    link(rel='import', href='bower_components/core-menu/core-menu.html')
    link(rel='import', href='bower_components/core-drawer-panel/core-drawer-panel.html')
    link(rel='import', href='bower_components/core-header-panel/core-header-panel.html')
  body(fullbleed='', layout='', vertical='', unresolved='', ng-controller='appController')
    core-header-panel(flex='')
      core-toolbar#mainheader
        paper-icon-button#navicon(icon='arrow-back')
        div
          | Charbot {{1+1}}
      core-drawer-panel
        div(drawer='')
          core-list(data='{{channels}}')
            template
    script(src='/socket.io/socket.io.js')
    script(src='bower_components/angular/angular.min.js')
    script(src='bower_components/angular-socket-io/socket.js')
    script(src='bower_components/underscore/underscore.js')
    script(src='js/d3.js')
    script(src='js/app.js')
    script(src='js/controllers.js')
