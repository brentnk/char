extends layout

block body
  .container-fluid(ng-controller='appController')
    .vsplit
      .list-group.col-sm-2
        a.list-group-item(ng-repeat='(key, value) in channels', href='#') {{key}}
          span.badge {{value.messages.length}}
      .ircmessages.col-sm-10.list-group
        .list-group-item.ircmessage(ng-repeat="a in messages | filter: chatfilter")
          span.glyphicon.glyphicon-chevron-right
          {{a.from}} - {{a.body}}

    .iograph

    .command-line
      form(ng-submit='processCmd()')
        .input-group
          span.input-group-btn#basic-addon1
            button.btn.btn-default(type='button') &lambda;
          input.form-control(type='text', ng-model='cmdl', placeholder='Enter command')

  script(src='/socket.io/socket.io.js')
  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-socket-io/socket.js')
  script(src='//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.0.js')
  script(src='js/d3.js')
  script(src='js/app.js')
  script(src='js/controllers.js')
